{
  "type": "map",
  "required": true,
  "mapping": {
    "id": { "type": "str", "required": true, "pattern": "/^bc-clouderamanager-|^bc-template-clouderamanager$/" },
    "description": { "type": "str", "required": true },
    "attributes": {
      "type": "map",
      "required": true,
      "mapping": {
        "clouderamanager": {
          "type": "map",
          "required": true,
          "mapping": {
            "debug":  { "type": "bool", "required": true},
            "admin_ip_eval": { "type": "str", "required": true },
            "admin_interface_eval": { "type": "str", "required": true },
            "cluster": {
              "type": "map",
              "required": true,
              "mapping": {
                "deployment_type": { "type": "str", "required": true},
                "license_key": { "type": "str", "required": false}
              }  
            },
            "ha": {
              "type": "map",
              "required": true,
              "mapping": {
                "shared_edits_directory": { "type": "str", "required": true},
                "shared_edits_export_options": { "type": "str", "required": true},
                "shared_edits_mount_options": { "type": "str", "required": true}
              }  
            },
            "os": {
              "type": "map",
              "required": true,
              "mapping": {
                "fs_type": { "type": "str", "required": true},
                "mapred_openfiles": { "type": "str", "required": true},
                "hdfs_openfiles": { "type": "str", "required": true},
                "hbase_openfiles": { "type": "str", "required": true}
              }  
            }
          } 
        }
      }
    },
    "deployment": {
      "type": "map",
      "required": true,
      "mapping": {
        "clouderamanager": {
          "type": "map",
          "required": true,
          "mapping": {
            "crowbar-revision": { "type": "int", "required": true },
            "crowbar-committing": { "type": "bool" },
            "crowbar-queued": { "type": "bool" },
            "element_states": {
              "type": "map",
              "mapping": {
                = : {
                  "type": "seq",
                  "required": true,
                  "sequence": [ { "type": "str" } ]
                }
              }
            },
            "elements": {
              "type": "map",
              "required": true,
              "mapping": {
                = : {
                  "type": "seq",
                  "required": true,
                  "sequence": [ { "type": "str" } ]
                }
              }
            },
            "element_order": {
              "type": "seq",
              "required": true,
              "sequence": [ {
                "type": "seq",
                "sequence": [ { "type": "str" } ]
              } ]
            },
            "config": {
              "type": "map",
              "required": true,
              "mapping": {
                "environment": { "type": "str", "required": true },
                "mode": { "type": "str", "required": true },
                "transitions": { "type": "bool", "required": true },
                "transition_list": {
                  "type": "seq",
                  "required": true,
                  "sequence": [ { "type": "str" } ]
                }
              }
            }
          }
        }
      }
    }
  }
}
